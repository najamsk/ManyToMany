@model M2M.Models.Tag

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Tag</legend>

    <div class="display-label">Title</div>
    <div class="display-field">@Model.Title</div>

    <div class="display-label">Movies</div>
    <div class="display-field">@(Model.Movies == null ? "None" : Model.Movies.Count.ToString())</div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.tagID }) |
    @Html.ActionLink("Back to List", "Index")
</p>


